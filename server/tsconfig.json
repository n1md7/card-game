{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es2018", "dom", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["typings/browser.d.ts", "typings/browser", "node_modules"]
}
